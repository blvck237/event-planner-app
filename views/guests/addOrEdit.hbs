<h3>{{viewTitle}}</h3>

<form action='/guests/{{eventId}}' method='POST' autocomplete='off'>
  <input type='hidden' name='_id' value='{{guest._id}}' />
  <input type='hidden' name='eventId' value='{{eventId}}' />
  <div class='form-group'>
    <label>Full Name</label>
    <input type='text' class='form-control' name='fullName' placeholder='Full Name' value='{{guest.fullName}}' />
    <div class='text-danger'>
      {{guest.fullNameError}}</div>
  </div>
  <div class='form-group'>
    <label>Email</label>
    <input type='text' class='form-control' name='email' placeholder='Email' value='{{guest.email}}' />
    <div class='text-danger'>
      {{guest.emailError}}</div>
  </div>
  <div class='form-row'>
    <div class='form-group col-md-6'>
      <label>Mobile</label>
      <input type='text' class='form-control' name='mobile' placeholder='Mobile' value='{{guest.mobile}}' />
    </div>
    <div class='form-group col-md-6'>
      <label>City</label>
      <input type='text' class='form-control' name='city' placeholder='City' value='{{guest.city}}' />
    </div>
  </div>
  <div class='form-group mt-3'>
    <button type='submit' class='btn btn-success'>Submit<i class='bi bi-check-circle m-2'></i></button>
    <a class='btn btn-secondary' href='/guests/{{eventId}}'>View All<i class='bi bi-table m-2'></i></a>
  </div>
</form>