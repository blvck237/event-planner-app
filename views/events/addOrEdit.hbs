<h3>{{viewTitle}}</h3>
{{! If error, display alert }}
{{#if error}}
  <div class='alert alert-danger' role='alert'>
    {{error}}
  </div>
{{/if}}

<form action='/events' method='POST' autocomplete='off'>
  <input type='hidden' name='_id' value='{{event._id}}' />
  <div class='form-group'>
    <label>Name</label>
    <input type='text' class='form-control' name='name' placeholder='My amazing wedding' value='{{event.name}}' />
  </div>
  {{! Description text area }}
  <div class='form-group'>
    <label>Description</label>
    <textarea class='form-control' name='description' rows='3'>{{event.description}}</textarea>
  </div>
  {{! Max guests number }}
  <div class='form-group'>
    <label>Max Guests</label>
    <input type='number' class='form-control' name='maxGuests' placeholder='100' value='{{event.maxGuests}}' />
  </div>
  {{! Date time picker }}
  <div class='form-group'>
    <label>Date</label>
    <input type='date' class='form-control' name='date' placeholder='YYYY-MM-DD' value='{{event.date}}' pattern="\d{2}/\d{2}/\d{4}"/>
    {{#if dateError}}
      <div class='text-danger'>
        {{dateError}}</div>
    {{/if}}
  </div>

  {{! Start time  picker}}
  <div class='form-group'>
    <label>Start Time</label>
    <input type='text' class='form-control' name='startTime' placeholder='HH:mm' value='{{event.startTime}}' />
    <div class='text-danger'>
      {{startTimeError}}</div>
  </div>

  {{! End time }}
  <div class='form-group'>
    <label>End Time</label>
    <input type='text' class='form-control' name='endTime' placeholder='HH:mm' value='{{event.endTime}}' />
    <div class='text-danger'>
      {{endTimeError}}</div>
  </div>

  <div class='form-row'>
    <div class='form-group col-md-6'>
      <label>Address</label>
      <input type='text' class='form-control' name='address' placeholder='Address' value='{{event.address}}' />
    </div>
  </div>
  <div class='form-group mt-3'>
    <button type='submit' class='btn btn-success'>Submit<i class='bi bi-check-circle m-2'></i></button>
    <a class='btn btn-secondary' href='/events/list'>View All<i class='bi bi-table m-2'></i></a>
  </div>
</form>